# =====================================================
# üåç SERVER CONFIGURATION
# =====================================================
PORT=4000
NODE_ENV=development

# Application Base URL (for links in emails)
BASE_URL=http://localhost:4000

# =====================================================
# üß† DATABASE CONFIGURATION
# =====================================================
# Your MongoDB connection string
# For local: mongodb://127.0.0.1:27017/shivamElectronics
# For production (MongoDB Atlas example):
# mongodb+srv://<USERNAME>:<PASSWORD>@cluster0.mongodb.net/shivamElectronics
DATABASE=mongodb://127.0.0.1:27017/shivamElectronics

# =====================================================
# üîê JWT CONFIGURATION
# =====================================================
JWT_SECRET=your_super_secure_secret_key_here
JWT_EXPIRES_IN=7d

# =====================================================
# ‚òÅÔ∏è CLOUDINARY (File & Image Uploads)
# =====================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =====================================================
# üìß EMAIL (Nodemailer SMTP or Gmail App Password)
# =====================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=youremail@gmail.com
EMAIL_PASS=your_gmail_app_password

# Example: If using a custom domain (Zoho, Outlook, etc.)
# EMAIL_HOST=smtp.zoho.com
# EMAIL_PORT=465
# EMAIL_USER=support@yourdomain.com
# EMAIL_PASS=your_app_password

# =====================================================
# üïí CRON JOB SETTINGS
# =====================================================
# Default schedules (24-hour format, in cron syntax)
# See: https://crontab.guru/
PAYMENT_REMINDER_CRON=0 9 * * *       # Every day at 09:00 AM
OVERDUE_REMINDER_CRON=30 9 * * *      # Every day at 09:30 AM
EMI_CHECK_CRON=0 8 * * *              # Every day at 08:00 AM
INVENTORY_ALERT_CRON=0 10 * * *       # Every day at 10:00 AM
NOTIFICATION_CRON=0 11 * * *          # Every day at 11:00 AM

# =====================================================
# üßæ INVOICE / PDF CONFIGURATION
# =====================================================
# Invoice template & theme settings
INVOICE_THEME=modern
INVOICE_LOGO_URL=https://res.cloudinary.com/your-cloud/image/upload/v1234567890/logo.png

# Optional Company Branding
COMPANY_NAME=Shivam Electronics
COMPANY_EMAIL=support@shivamelectronics.com
COMPANY_PHONE=+91 9876543210
COMPANY_ADDRESS=123 MG Road, Delhi, India

# =====================================================
# üí¨ OTHER OPTIONAL SETTINGS
# =====================================================
# Default low stock threshold (for inventory alerts)
LOW_STOCK_THRESHOLD=10

# Whether to enable cron jobs (for development toggle)
ENABLE_CRONS=true
